{
  "name": "@ministryofjustice/hmpps-central-session",
  "version": "1.0.0",
  "description": "A library for implementing a shared central user session between microservice frontends",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "lint": "eslint . --cache --max-warnings 0",
    "typecheck": "tsc",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --runInBand --passWithNoTests",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "clean": "rm -rf dist build node_modules stylesheets"
  },
  "engines": {
    "node": "^18",
    "npm": "^9"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "dependencies": {
    "agentkeepalive": "^4.3.0",
    "connect-redis": "^7.0.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "redis": "^4.6.5",
    "superagent": "^8.0.9"
  },
  "devDependencies": {
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.1",
    "@types/superagent": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-html-reporter": "^3.8.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
